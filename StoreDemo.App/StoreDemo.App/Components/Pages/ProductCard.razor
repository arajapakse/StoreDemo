<div class="card">
    
    <div class="card-body">
        <img src="@Product.ImageUrl" class=" item" alt="@Product.Name">
        <h5 class="card-title">@Product.Name</h5>
        <p class="card-text">@Product.Description</p>
    </div>
    <div class="card-footer">
        <small class="text-muted">Last updated 3 mins ago</small>
    </div>
</div>

<style>
    img {
        max-width: 100%;
        height: auto;
    }

    .item {
        width: 120px;
        min-height: 120px;
        max-height: auto;
        float: left;
        margin: 3px;
        padding: 3px;
    }
</style>
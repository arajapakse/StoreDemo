@page "/login"

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <EditForm Model="LoginRequest" OnValidSubmit="HandleLogin">
                        <DataAnnotationsValidator />
                        <ValidationSummary />
                    
                        <div class="form-group">
                            <label for="email">
                                Email
                            </label>
                            <input type="email"
                            class="form-control"
                            id="email"
                            placeholder="Email" required  @bind-value="LoginRequest.Username"/>
                        </div>
                        <div class="form-group">
                            <label for="password">
                                Password
                            </label>
                            <input type="password"
                            class="form-control"
                            id="password"
                            placeholder="Password"
                            required @bind-value="LoginRequest.Password" />
                        </div>

                        <button class="btn btn-danger">
                            Login
                        </button>

                        @if (!IsLoading)
                        {
                            <span>Loading...</span>
                        }
                        else
                        {
                            <span>Login</span>
                        }
                    </EditForm>
                    @if (!string.IsNullOrEmpty(ErrorMessage))
                    {
                        <div class="alert alert-danger mt-3">
                            @ErrorMessage
                        </div>
                    })

                </div>
            </div>
        </div>
    </div>
</div>
